@using BurgerApp.Domain.Models;
@model List<BestCombo>

<div class="container d-flex justify-content-center flex-wrap margin-bottom-10rem">
    @foreach (var bestCombo in Model)
    {
        <div class="card m-5" style="width: 18rem;">
            <div class="card-body bg-warning">
                <div class="d-flex justify-content-end">
                    <p class="bg-dark text-light text-center" style="width:20%; border-radius:45%;">@bestCombo.Calories kcal</p>
                </div>
                <div class="d-flex flex-column align-items-center">
                    <img src="@Url.Content(bestCombo.RoadToImage)" style="width:200px; height:200px" alt="@bestCombo.BestComboId">
                    <h5 class="card-title text-center italic">@bestCombo.BestComboName</h5>
                </div>
                <div class="d-flex justify-content-center mt-2 bg-black text-warning radius-30">
                    <div>
                        <span class="fw-bold price-font-size">$@bestCombo.Price</span>
                    </div>
                </div>
            </div>
        </div>
    }
</div>